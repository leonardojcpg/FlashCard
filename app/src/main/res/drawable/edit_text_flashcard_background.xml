<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Cor de fundo do EditText -->
    <solid android:color="#FFFFFF" />

    <!-- Borda arredondada com cor e largura especificadas -->
    <stroke
        android:width="2dp"
        android:color="#CCCCCC" />

    <!-- Arredondamento dos cantos -->
    <corners android:radius="20dp" />

    <!-- Margem interna para espaçamento do conteúdo -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
